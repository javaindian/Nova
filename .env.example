# Database Configuration
DB_HOST=localhost
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=ai_trading_db

# Fyers API Credentials (Leave blank if not used or using paper trading)
# FYERS_APP_ID=""
# FYERS_APP_SECRET="" #This is often referred to as client_secret or api_secret
# FYERS_CLIENT_ID="" # Your Fyers Client ID / Username
# FYERS_TOTP_KEY="" # For generating TOTP if required by Fyers login
# FYERS_PIN="" # Your Fyers PIN
# FYERS_REDIRECT_URI="http://localhost:8000/callback" # Or whatever you configured

# YFinance settings (if any specific needed, usually not)
# YFINANCE_PROXY=""

# Application Settings
# GLOBAL_RISK_PERCENT=2.0 # Example: 2% risk per trade
# LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR

# For Streamlit deployment (if applicable, usually handled by hosting platform)
# STREAMLIT_SERVER_PORT=8501

